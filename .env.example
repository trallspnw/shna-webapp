# Database connection string (Postgres only)
DATABASE_URL=postgresql://payload:payload@localhost:5432/payload

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# CMS base URL (used for CORS, links, admin preview, and static export). No trailing slash
NEXT_PUBLIC_CMS_URL=http://localhost:3000

# Public site base URL (static export). No trailing slash
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE
